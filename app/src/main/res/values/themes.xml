<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>
        <item name="android:statusBarColor">@color/status_color_bar</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MyAppWithSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/status_color_bar</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

</resources>
